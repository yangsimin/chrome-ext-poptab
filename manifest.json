{
  "name": "Popup Tab",
  "version": "1.0.3",
  "description": "Popup current tab to a separate window.",
  "icons": {
    "48": "/assets/merge_windows_48.png",
    "128": "/assets/merge_windows_128.png"
  },
  "background": {
    "service_worker": "/dist/background.js"
  },
  "action": {
    "default_icon": "/assets/arrow_in.png",
    "default_title": "Popup Tab"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],
  "manifest_version": 3,
  "host_permissions": [
    "<all_urls>"
  ]
}